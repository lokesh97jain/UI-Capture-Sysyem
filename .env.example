# UI Capture System Configuration
# Copy this file to .env and fill in your values

# ============================================
# Browser Configuration
# ============================================

# Run browser in headless mode (true/false)
HEADLESS=false

# Browser type: chromium, firefox, webkit
BROWSER_TYPE=chromium

# Browser viewport size
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080

# ============================================
# Capture Settings
# ============================================

# Output directory for captured datasets
OUTPUT_DIR=./datasets

# Maximum wait time for page loads (milliseconds)
PAGE_LOAD_TIMEOUT=30000

# Default wait time after actions (milliseconds)
DEFAULT_ACTION_WAIT=500

# Wait time for animations to complete (milliseconds)
ANIMATION_WAIT=1000

# Screenshot format: png, jpeg
SCREENSHOT_FORMAT=png

# Screenshot quality for JPEG (1-100)
SCREENSHOT_QUALITY=90

# Capture full page screenshots (true/false)
FULL_PAGE_SCREENSHOT=true

# ============================================
# Workflow Configuration
# ============================================

# Directory containing workflow YAML files
WORKFLOWS_DIR=./workflows

# Directory containing authentication state files
STORAGE_STATE_DIR=./storage_state

# ============================================
# Detection Settings
# ============================================

# Enable modal detection (true/false)
DETECT_MODALS=true

# Enable overlay detection (true/false)
DETECT_OVERLAYS=true

# Enable animation detection (true/false)
DETECT_ANIMATIONS=true

# Network idle timeout (milliseconds)
NETWORK_IDLE_TIMEOUT=2000

# ============================================
# Retry & Error Handling
# ============================================

# Maximum retry attempts for failed actions
MAX_RETRIES=3

# Delay between retries (milliseconds)
RETRY_DELAY=1000

# Continue on error (true/false)
CONTINUE_ON_ERROR=false

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file (true/false)
LOG_TO_FILE=true

# Log file path
LOG_FILE=./ui-capture.log

# Enable colorized console output (true/false)
COLORIZED_OUTPUT=true

# ============================================
# Performance & Optimization
# ============================================

# Enable image optimization (true/false)
OPTIMIZE_IMAGES=false

# Maximum image size in KB (0 = no limit)
MAX_IMAGE_SIZE_KB=0

# Enable parallel workflow execution (true/false)
PARALLEL_EXECUTION=false

# Maximum parallel workers
MAX_WORKERS=3

# ============================================
# Application-Specific Settings
# ============================================

# Linear
LINEAR_WORKSPACE=your-workspace

# Notion
NOTION_WORKSPACE=your-workspace

# GitHub
GITHUB_ORG=your-organization
GITHUB_REPO=your-repository

# ============================================
# Advanced Settings
# ============================================

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Save browser traces (for debugging)
SAVE_TRACES=false

# Trace output directory
TRACE_DIR=./traces

# Slow down actions (milliseconds, for debugging)
SLOW_MO=0

# User agent override (leave empty for default)
USER_AGENT=

# Proxy server (leave empty for no proxy)
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=